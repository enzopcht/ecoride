{% extends 'base.html.twig' %}

{% block title %}Rechercher un trajet - EcoRide
{% endblock %}

{% block body %}
	<main class="container-xl mt-4">
	{% for message in app.flashes('warning') %}
		<div class='alert alert-danger'>
			{{ message }}
		</div>
	{% endfor %}
		<div class="container rounded-4 bg-white p-3 shadow col-12 col-lg-12">
			{{ form_start(searchForm, {
			    'action': path('app_search_results'),
			    'method': 'POST',
			    'attr': {'class': 'row g-3 justify-content-center'}
			}) }}
			<div class="col-12 col-lg-3">
				{{ form_label(searchForm.departure) }}
				{{ form_widget(searchForm.departure, {'attr': {'class': 'form-control' }}) }}
				<div class="suggestion-box w-100">
					<ul id="departure_suggestions" class="list-group">
					</ul>
				</div>
			</div>
			<div class="col-12 col-lg-3">
				{{ form_label(searchForm.arrival) }}
				{{ form_widget(searchForm.arrival, {'attr': {'class': 'form-control' }}) }}
				<div class="suggestion-box w-100">
					<ul id="arrival_suggestions" class="list-group">
					</ul>
				</div>
			</div>
			<div class="col-12 col-lg-3">
				{{ form_row(searchForm.date) }}
			</div>
			<div class="text-center col-lg-2 align-self-end">
				{{ form_row(searchForm.rechercher, {'attr': {'class': 'btn btn-primary w-100'}}) }}
			</div>
			{{ form_end(searchForm) }}
		</div>
	</main>
	{% block javascripts %}
		<script src="{{ asset('js/modules/searchAutocompleteFormAddress.js') }}"></script>
	{% endblock %}
{% endblock %}
