{% extends 'base.html.twig' %}

{% block title %}Nous contacter - EcoRide
{% endblock %}

{% block body %}

	<main class="container-xl">


		<h1 class="text-dark mb-3">
			Nous contacter
		</h1>

		<section>
			{{ form_start(form) }}
			<div class="mb-3">
				{{ form_row(form.first_name) }}
			</div>
			<div class="mb-3">
				{{ form_row(form.last_name) }}
			</div>
			<div class="mb-3">
				{{ form_row(form.email) }}
			</div>
			<div class="mb-3">
				{{ form_row(form.message) }}
			</div>
			<button type="submit" class="btn btn-primary">Envoyer</button>
			{{ form_end(form) }}
		</section>
	</main>
{% endblock %}
