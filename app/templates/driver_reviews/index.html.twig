{% extends 'base.html.twig' %}

{% block title %}Avis de
	{{driver}}
{% endblock %}

{% block body %}

	<main class="container-xl">
		<a href="{{ app.request.headers.get('referer') }}" class="btn text-dark">
			<i class="bi bi-arrow-left-circle fs-3"></i>
		</a>
		<h1 class="text-dark mb-3">Avis de
			<span class="text-primary">{{driver}}</span> ({{driverReviews|length}})
		</h1>
		<section>
			{% if driverReviews|length > 0 %}
				<div class="row gap justify-content-center">
					{% for review in driverReviews %}
						<div class="col-12 col-md-6 col-lg-4 mb-3">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title text-primary">{{review.author}}</h5>
									<h6 class="card-subtitle mb-2 text-secondary">{{review.rating}}/5<i class="bi bi-star-fill text-warning"></i></h6>
                                    <hr>
									<p class="card-text" style="height: 8rem; overflow: auto">{{review.comment}}</p>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				Pas encore de reviews
			{% endif %}

		</section>
	</main>
{% endblock %}
