{% extends 'base.html.twig' %}

{% block title %}Détails du trajet - EcoRide
{% endblock %}

{% block body %}
	<main class="container-xl">
		<button onclick="window.history.back()" class="btn text-dark">
			<i class="bi bi-arrow-left-circle fs-3"></i>
		</button>
		<h1 class="text-dark mb-3">Détail du trajet</h1>

		<div class="row justify-content-center">
			<div class="col-12 col-md-10 col-lg-6 align-self-start mb-3">
				<div class="bg-white rounded shadow overflow-hidden">
					<div class="row align-items-center p-3">
						<span class="text-primary col fs-4">Départ -> Arrivée</span>
						<span class="text-end text-primary col fs-4">00/00/0000</span>
					</div>
					<hr class="my-0">
					<div class="row align-items-center px-3 py-2">
						<div class="d-flex align-items-center col">
							<img src="/assets/images/user.png" alt="" height="50" width="50" class="rounded-circle border border-dark me-2 bg-white">
							<div class="fs-5">Pseudo</div>
						</div>
						<div class="col text-end">
							note/5<i class='bi bi-star-fill text-warning'></i>
						</div>
					</div>
					<hr>
					<div class="row align-items-center mx-auto px-3 py-2">
						<div class="col fs-5 text-dark text-end">00:00</div>
						<div class="col-6 line"></div>
						<div class="col fs-5 text-dark">00:00</div>
					</div>
					<hr>
					<div class="row align-items-center mx-auto px-3 py-2">
						<div class="col-8">
							<p class="text-secondary mb-0">Voyage écologique
								<i class="bi bi-lightning-charge"></i>
							</p>
							<p class="mb-0">Places restante(s) : Nbr</p>
						</div>
						<div class="text-dark col text-end fs-2">Prix<i class="bi bi-coin text-warning ms-2"></i>
						</div>
					</div>
					<div class="mt-3">
						<button class="btn btn-primary w-100 rounded-0 rounded-bottom py-3">Réserver</button>
					</div>
				</div>
			</div>
			<div class="col-12 col-md-10 col-lg-6 mx-auto">
				<div class="my-3 d-flex">
					<h5 class="text-dark me-2">
						<i class="bi bi-geo-alt"></i>Départ :</h5>
					<span class="text-secondary">Adresse</span>
				</div>
				<hr>
				<div class="my-3 d-flex">
					<h5 class="text-dark me-2">
						<i class="bi bi-geo-alt"></i>Arrivée :</h5>
					<span class="text-secondary">Adresse</span>
				</div>
				<hr>
				<a href="#" class="text-decoration-none">
					<div class="d-flex my-3">
						<h5 class="text-dark me-2">Avis(Nbr avis) :
						</h5>
						<span class="text-secondary">note/5</span>
						<i class="bi bi-star-fill text-warning"></i>
						<i class="bi bi-chevron-right text-dark col text-end"></i>
					</div>
				</a>
				<hr>

				<div class="my-3 d-flex">
					<h5 class="text-dark me-2">Véhicule du trajet :</h5>
					<span class="text-secondary">
						<i class="bi bi-lightning-charge"></i>Voiture</span>
				</div>

				<hr>

				<div class="my-3 row justify-content-center">
                    <div class="col-12 col-md-6">
                        <h5 class="text-dark">Préférences conducteur</h5>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center border border-success rounded p-2 mb-2 shadow-sm text-success">
                                <span>Musique</span>
                                <i class="bi bi-hand-thumbs-up"></i>
                            </div>
                            <div class="d-flex justify-content-between align-items-center border border-danger rounded p-2 mb-2 shadow-sm text-danger">
                                <span>Fumer</span>
                                <i class="bi bi-hand-thumbs-down"></i>
                            </div>
                            <div class="d-flex justify-content-between align-items-center border border-danger rounded p-2 mb-2 shadow-sm text-danger">
                                <span>Animaux</span>
                                <i class="bi bi-hand-thumbs-down"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <h5 class="text-dark">Demandes du conducteur</h5>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2 shadow-sm text-dark border-dark">
                                <span>Pas de bagages trop lourd</span>
                            </div>
                        </div>
                    </div>
				</div>
			</div>
		</div>
	</div>
</main>{% endblock %}
