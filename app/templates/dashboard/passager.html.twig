{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - EcoRde
{% endblock %}

{% block body %}
	<main class="container-xl">

		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>

		<div class="d-flex align-items-center">
			<h1 class="text-dark">
				Tableau de bord
				<span class="text-primary">{{user}}</span>
			</h1>
			<div class="text-white text-center d-flex bg-dark fs-5 ms-auto shadow p-3 rounded">2<i class="bi bi-coin text-warning"></i>
			</div>
		</div>

		<div class="list-nav-custom mb-3">
			<ul>

				<li><a href="#">Historique de covoiturages</a></li>

			</ul>
		</div>

		<div class="text-center my-3">

			<a href="#" class="btn btn-primary">Devenir un driver</a>

		</div>

		<hr>

		<div class="mb-3">
			<h3 class="text-primary">Covoiturages prévus :
				<span class="text-secondary">Nbr</span>
			</h3>

			<div class="accordion shadow-sm" id="next-carpool">
				<div class="accordion-item">
					<h2 class="accordion-header">
						<button class="accordion-button " type="button" data-bs-toggle="collapse" data-bs-target="#collapseFirstNextBooking" aria-expanded="true" aria-controls="1">
							DEPART -> ARRIVE
							<span class="text-primary ms-3">STATUS</span>
						</button>
					</h2>
					<div id="1" class="accordion-collapse collapse show" data-bs-parent="#next-carpool">
						<div class="accordion-body">

							<div class="row align-items-center">
								<h3 class="text-primary text-center">DATE</h3>
								<hr>
							</div>
							<div class="row align-items-center">
								<div class="align-items-center d-flex col">
									<img src="/assets/images/user.png" alt="" height="40" class="rounded-circle border border-dark me-2">
									<div class="fs-5">DRIVER NAME</div>
								</div>
								<div class="col text-end">
									NOTE/5<i class="bi bi-star-fill text-warning"></i>
								</div>
							</div>
							<hr>
							<div class="row align-items-center mx-auto">
								<div class="col fs-5 text-dark text-end">HEURE</div>
								<div class="col-6 line"></div>
								<div class="col fs-5 text-dark">HEURE</div>
							</div>
							<hr>
							<div class="row align-items-center mx-auto">
								<div class="col-8">
									<p class="text-secondary mb-0">Voyage écologique
										<i class="bi bi-lightning-charge"></i>
									</p>
									<p class="mb-0">Places restante(s) : NOMBRE</p>
								</div>
								<div class="text-dark col text-end fs-2">PRIX<i class="bi bi-coin text-warning"></i>
								</div>
							</div>
							<div>
								<form action="" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réservation ?')">
									<input type="hidden" name="booking_id" value="">
									<input type="hidden" name="carpool_id" value="">
									<input type="hidden" name="price" value="">
									<div class="text-center">
										<button type="submit" class="btn btn-danger" name="deleteBooking">Annuler réservation</button>
									</div>
								</form>
							</div>

						</div>
					</div>
				</div>
			</div>
			<p>Pas de covoiturages prévus</p>
		</div>
	</main>
{% endblock %}
